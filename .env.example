DB_PORT=5432
DB_NAME=intertravel_prod
DB_USER=intertravel_user
DB_PASSWORD=SECURE_PASSWORD_HERE

# ======================================
# CONFIGURACIÓN BACKEND
# ======================================

# JWT Secret
