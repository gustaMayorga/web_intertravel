# Configuración de Variables de Entorno - PRODUCCIÓN

# Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intertravel_prod
DB_USER=intertravel_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Configuración del Servidor
NODE_ENV=production
PORT=3002

# URLs de la Aplicación
FRONTEND_URL=https://admin.intertravel.com.ar
CLIENT_APP_URL=https://app.intertravel.com.ar
DOMAIN_URL=https://intertravel.com.ar

# Credenciales de Admin
ADMIN_PASSWORD=CHANGE_ADMIN_PASSWORD
AGENCY_PASSWORD=CHANGE_AGENCY_PASSWORD

# JWT Secret
JWT_SECRET=CHANGE_THIS_JWT_SECRET_FOR_PRODUCTION

# API Keys (si es necesario)
TRAVEL_COMPOSITOR_API_KEY=your_travel_compositor_key
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Email Configuration (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@intertravel.com.ar
SMTP_PASS=your_email_password

# Payment Gateways (opcional)
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_token
STRIPE_SECRET_KEY=your_stripe_secret_key

# Logging
LOG_LEVEL=info